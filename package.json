{
  "name": "ksdc",
  "version": "1.0.0",
  "description": "Measure how similar two strings are using the Sørensen–Dice Coefficient",
  "license": "MIT",
  "type": "module",
  "main": "./index.min.cjs",
  "exports": {
    ".": "./index.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macarie/ksdc.git"
  },
  "bugs": {
    "url": "https://github.com/macarie/ksdc/issues"
  },
  "homepage": "https://github.com/macarie/ksdc#readme",
  "author": {
    "name": "Raul Macarie",
    "email": "raul@macarie.me",
    "url": "https://macarie.me"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "index.min.js",
    "index.min.cjs"
  ],
  "scripts": {
    "compile:cjs": "esbuild --minify --bundle --format=cjs --target=esnext --outfile=index.min.cjs index.js",
    "compile:mjs": "esbuild --minify --target=esnext --outfile=index.min.js index.js",
    "compile": "run-p -s compile:*",
    "lint": "xo",
    "test": "c8 ava --verbose",
    "coverage": "c8 report --reporter=text-lcov | codecov --pipe --disable=gcov"
  },
  "devDependencies": {
    "ava": "^3.11.0",
    "c8": "^7.2.1",
    "codecov": "^3.7.1",
    "esbuild": "^0.6.3",
    "npm-run-all": "^4.1.5",
    "xo": "^0.32.1"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/import-index": [
        "off"
      ],
      "import/extensions": [
        "off"
      ],
      "import/no-useless-path-segments": [
        "off"
      ],
      "unicorn/no-fn-reference-in-iterator": [
        "off"
      ],
      "unicorn/no-reduce": [
        "off"
      ]
    }
  },
  "prettier": {
    "semi": false,
    "bracketSpacing": true,
    "useTabs": false,
    "endOfLine": "lf",
    "trailingComma": "es5"
  }
}
